{% extends layout_template  %}

{% block title %}Edit User: {{ user.displayName }}{% endblock %}

{% block content %}

{% if error %}
    <div class="alert alert-error">{{ error|nl2br }}</div>
{% endif %}

<div class="media">

    <div class="media-user-info">

            <div class="controls gravatar">
                <img src="{{ imageUrl }}"/>
            </div>

        <div class="page-header">
        <h1>edit user: {{ user.displayName }}</h1>
        </div>

        <label class="control-label" for="input-name">
            <a href="http://gravatar.com">change gravatar image</a>
        </label>
        {% if app.request.get('callback_url') %}
            <div id="link-user"><a href="{{ app.request.get('callback_url') }}">back to app</a></div>
        {% endif %}

      

        <form class="form-horizontal" method="POST">

        
    </div>

        <h2 class="user-information">User informations</h2>


        <div class="control-group">
            <div class="controls">
                <label class="control-label" for="input-name">Name</label>
                <input name="name" type="text" id="input-name" placeholder="Name" value="{{ user.name }}">
                <span class="help-inline">Shown publicly</span>
            </div>
        </div>

        <div class="control-group">
            <div class="controls">       
             <label class="control-label" for="input-email">Email</label>
                <input name="email" type="email" id="input-email" placeholder="Email" required value="{{ user.email }}">
                <span class="help-inline">Never shared</span>
            </div>
        </div>

        <div class="control-group">
            <div class="controls">
                <label class="control-label" for="input-password">New password</label>
                <input name="password" type="password" id="input-newpassword" placeholder="New password">
                <span class="help-inline">Leave blank except to change</span>
            </div>
        </div>

        <div class="control-group">
            <div class="controls">
                <label class="control-label" for="input-confirm-password">Confirm password</label>
                <input name="confirm_password" type="password" id="input-confirm-password" placeholder="Confirm password">
            </div>
        </div>

        {% if is_granted('ROLE_ADMIN') %}
            <div class="controls">
                Admin options:
            </div>

            <div class="control-group">
                <label class="control-label" for="input-roles">Roles</label>
                <div class="controls">
                    <select multiple id="input-roles" name="roles[]">
                        {% for role in available_roles %}
                            <option value="{{ role }}" {% if user.hasRole(role) %}selected{% endif %}>{{ role }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        {% endif %}

        <div class="control-group">
            <div class="controls">
                <button type="submit" class="btn save-info">save new informations</button>
                <a style="margin-left: 10px;" href="{{ path('user.view', {'id': user.id, 'callback_url' :app.request.get('callback_url')}) }}">or back to profile</a>
            </div>
        </div>

    </form>
</div>
{% endblock %}
