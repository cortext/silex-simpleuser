{% extends layout_template  %}

{% block title %}{{ user.displayName }}{% endblock %}

{% block content %}

<div class="media">

    <div class="media-user-info">

        <div class="gravatar">
        <img class="media-object pull-left" src="{{ imageUrl }}" width="80" height="80">
        </div>

        <h1 class="media-heading">{{ user.displayName }}</h1>

        <div class="muted">
        Registered {{ user.timeCreated|date('F j, Y') }}
        </div>

    </div>

    <h2 class="user-information">User informations</h2>

    <div class="media-body">
        
        <div class="profile">
            <div class='table'>
                    {% for key,item in profile %}
                        {% if key != "id" %}
                            <div class="table-user"> <p class="key"> {{key}}</p> <p class="item"> {{item}}</p></div>                  
                        {% endif %}
                    {% endfor %}
            </div>
        
        {#% if is_granted('EDIT_USER') %#}
            <div id="edit-user">
                <a href="{{ path('user.edit', {'id': user.id}) }}"><i class="icon-edit" style="margin-right: 5px;"></i>Edit</a>
            </div>
        {#% endif %#}
        
    </div>
</div>


{% endblock %}
