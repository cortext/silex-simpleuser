{% extends layout_template  %}

{% block title %}Register{% endblock %}

{% block content %}

<div class="media border-media">


    {% if app.user %}
        <p>Hello, {{ app.user.displayName }}. You are already registered and logged in.</p>
        <p><a href="{{ path('user.logout') }}">Log out</a></p>
        <p><a href="{{ path('user.view', {'id': app.user.id}) }}">View profile</a></p>

    {% else %}
        <div class="page-header">
            <h2 class="info-sign">
                Create an account<br/>
               
            </h2>
        </div>

        {% if error %}
            <div class="alert alert-error">{{ error|nl2br }}</div>
        {% endif %}

        <form class="form-horizontal" method="POST">
                <input name="callback" type="hidden" value="{{ callback }}" />
            <div class="control-group">
                <div class="controls">
                    <label class="control-label" for="input-name">Name</label>
                    <input name="name" type="text" id="input-name" placeholder="Name" value="{{ name }}">
                    <span class="help-inline">Shown publicly</span>
                </div>
            </div>

            <div class="control-group">
                <div class="controls">
                    <label class="control-label" for="input-email">Email</label>
                    <input name="email" type="email" id="input-email" placeholder="Email" required value="{{ email }}">
                    <span class="help-inline">Never shared</span>
                </div>
            </div>

            <div class="control-group">
                <div class="controls">
                    <label class="control-label" for="input-password">Password</label>
                    <input name="password" type="password" id="input-password" required placeholder="Password">
                </div>
            </div>

            <div class="control-group">
                <div class="controls">
                    <label class="control-label" for="input-confirm-password">Confirm password</label>
                    <input name="confirm_password" type="password" id="input-confirm-password" required placeholder="Confirm password">
                </div>
            </div>

            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn bt-register">Register</button>
                </div>
            </div>
             <h3 class="infosign2">Already have an account ? <a href="{{ path('user.login') }}">Log in now</a></h3>


        </form>

    {% endif %}

   </div> 
{% endblock %}
